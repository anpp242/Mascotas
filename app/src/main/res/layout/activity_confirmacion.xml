<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_02"
    tools:context=".confirmacion">

    <TextView
        android:id="@+id/Saludo"
        android:layout_width="297dp"
        android:layout_height="85dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="146dp"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/text_entrada"
        android:layout_width="294dp"
        android:layout_height="103dp"
        android:layout_below="@+id/Saludo"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/peso"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_entrada"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Peso de tu mascota (KG)"
        android:inputType="number"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/resultados"
        android:layout_width="302dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="91dp"
        android:text=""
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn_calcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:background="@drawable/styles_btn"
        android:onClick="calculoP"
        android:text="CALCULAR "
        android:textColor="@android:color/background_light" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:onClick="cerrar"
        app:srcCompat="@drawable/cerrar" />

    <TextView
        android:id="@+id/tm"
        android:layout_width="124dp"
        android:layout_height="51dp"
        android:layout_below="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-17dp"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

</RelativeLayout>